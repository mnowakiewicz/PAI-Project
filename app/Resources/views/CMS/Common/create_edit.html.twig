{% extends 'CMS/base.html.twig' %}

{% block content_wrapper %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ title }}</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" id="submit-form" class="btn btn-primary">{{ submit_button_text }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}