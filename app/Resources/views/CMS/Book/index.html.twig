{% extends 'CMS/base.html.twig' %}

{% block content_wrapper %}
    <div class="box-body">
        <table id="data-table" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>SubTitle</th>
                <th>Authors</th>
                <th>Published</th>
                <th>PrintType</th>
                <th>Status</th>
                <th>Creation Date</th>
                <th>Edit Date</th>
            </tr>
            </thead>
        </table>
    </div>
{% endblock %}
{% block extra_scripts %}
    <script>
        $(function () {
            $('#data-table').DataTable({
                serverSide: true,
                'autoWidth'   : false,
                'lengthChange': false,
                ajax: '{{ path('api_books_datatable_data') }}'
            });
        })
    </script>
{% endblock %}